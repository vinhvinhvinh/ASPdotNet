@model CakeBakery.Models.Account
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    //unit of currency
    var UOC_Format = System.Globalization.CultureInfo.GetCultureInfo("vi-VN");
    ViewData["Title"] = "Thông tin cá nhân";
    List<Order> invs = ViewBag.ListInvoices;
}
<style>
    table {
    }

    td, th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #dddddd;
    }
</style>
<div class="container rounded bg-white mt-5 mb-5" style="padding-top: 70px">
    <div class="row">
        <div class="col-md-3 border-right">
            <div class="d-flex flex-column align-items-center text-center p-3 py-5"><img class="rounded-circle mt-5" width="180px" src="~/img/user/@Model.Avatar" alt=""><span class="font-weight-bold"></span>@Model.Username<span class="text-black-50"></span><span>@Model.Email </span></div>
        </div>
        <div class="col-md-4 border-right">
            <div class="p-3 py-5">

                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="text-right">Thông tin cá nhân</h4>
                </div>
                <form asp-action="Profile" novalidate="novalidate" enctype="multipart/form-data">

                    <div class="row mt-3">
                        <div class="col-md-5"><label class="labels">Username</label><input disabled asp-for=Username type="text" class="form-control" placeholder="@Model.Username" value=""></div>
                        <div class="col-md-12"><label class="labels">Họ tên</label><input asp-for=FullName type="text" class="form-control" value="" placeholder="@Model.FullName"></div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-12"><label class="labels">Email</label><input asp-for=Email type="email" class="form-control" placeholder="@Model.Email" value=""></div>
                        <div class="col-md-12"><label class="labels">Địa chỉ 1</label><input asp-for=Address1 type="text" class="form-control" placeholder="@Model.Address1" value="@Model.Address1"></div>

                        <div class="form-group">
                            <label>Ảnh</label>
                            <input name="hinhanh" type="file" class="form-control">
                            <span class="help-block" data-valmsg-for="cc-number" data-valmsg-replace="true">Ảnh cũ: @Model.Avatar"</span>
                        </div>
                    </div>

                    <div class="mt-5 text-center"><button class="btn btn-primary profile-button" type="submit">Save Profile</button></div>
                </form>
            </div>
        </div>
        <div class="col-md-5">
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center experience"><span>Đơn hàng gần đây</span><a href="#"><span class="border px-4 p-1 add-experience">Xem tất cả</span></a></div><br>

                <table>
                    <tr>
                        <th>Mã hóa đơn</th>
                        <th>Ngày lập</th>
                        <th>Tổng tiền</th>
                        <th></th>
                    </tr>

                    @foreach(var inv in invs)
                    {
                        <tr>
                            <td>@inv.Id</td>
                            <td>@inv.IssueDate</td>
                            <td>@String.Format(UOC_Format, "{0:c0}", @inv.Total)</td>
                            <td>
                                <a style="display:contents" asp-action="InvoiceDetail" asp-route-id="@inv.Id">
                                    <button class="item" data-toggle="tooltip" data-placement="top" title="Edit" style="border: none">
                                        <i class="fa fa-eye"></i>
                                    </button>
                                </a>
                            </td>
                        </tr>
                    }
                    

                </table>

            </div>
        </div>
    </div>
</div>
</div>
</div>