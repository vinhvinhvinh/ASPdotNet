@{
    List<Product> lstProducts = ViewBag.ProductList;
}
<!--================Special Recipe Area =================-->
<section class="special_recipe_area">
    <div class="container">
        <div class="special_recipe_slider owl-carousel">
            @foreach (Product product in lstProducts)
            {
                <div class="item">
                    <div class="media">
                        <div class="d-flex">
                            <img src="img/recipe/@product.Image" alt="1">
                        </div>
                        <div class="media-body">
                            <h4>@product.Name</h4>
                            <p>@product.Description</p>
                            <a class="w_view_btn"asp-controller="Products" asp-action="ProductDetail">Xem chi tiết</a>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</section>
<!--================End Special Recipe Area =================-->